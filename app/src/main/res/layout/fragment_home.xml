<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="horizontal" android:background="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/white_home_rect" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
            <ImageView android:layout_gravity="center" android:layout_width="18dp" android:layout_height="18dp" android:layout_marginLeft="8dp" android:src="@drawable/ic_search"/>
            <EditText android:textSize="15sp" android:id="@+id/editext" android:background="@color/transperent" android:padding="10sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Tìm kiếm..." android:textColor="@color/txt_color" android:inputType="text" android:fontFamily="@font/roboto_regular"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView android:background="@drawable/bg1" android:layout_width="match_parent" android:layout_height="180dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:textColor="@color/txt_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Các Thương Hiệu" android:layout_weight="1" android:fontFamily="@font/lexend_exa"/>
<!--        <TextView android:textSize="13sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View More" android:fontFamily="@font/lexend_exa"/>-->
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/brand_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:fontFamily="@font/lexend_exa" />
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:textColor="@color/txt_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Những Dòng Điện Thoại Mới" android:layout_weight="1" android:fontFamily="@font/lexend_exa"/>
        <TextView android:textSize="13sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xem Thêm" android:fontFamily="@font/lexend_exa"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/lasted_product_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <ImageView android:background="@drawable/mobile" android:layout_width="match_parent" android:layout_height="150dp" android:layout_margin="10dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:textColor="@color/txt_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Dòng Điện Thoại Thịnh Hành" android:layout_weight="1" android:fontFamily="@font/lexend_exa"/>
        <TextView android:textSize="13sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xem Thêm" android:fontFamily="@font/lexend_exa"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/pupular_product_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/anhgalaxysamdung" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
            <ImageView android:background="@drawable/anhnoteme" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/anhredmi13" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
            <ImageView android:background="@drawable/anhtonor" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
