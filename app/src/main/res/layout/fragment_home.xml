<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/white_home_rect"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ic_search" />

            <EditText
                android:id="@+id/editext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transperent"
                android:fontFamily="@font/lexend"
                android:hint="Tìm kiếm..."
                android:inputType="text"
                android:padding="10sp"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <ImageView android:background="@drawable/bg1" android:layout_width="match_parent" android:layout_height="180dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend"
            android:text="Các thương hiệu"
            android:textColor="@color/txt_color" />
<!--        <TextView android:textSize="13sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="View More" android:fontFamily="@font/roboto_regular"/>-->
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/brand_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lexend"
            android:text="Các dòng điện thoại mới"
            android:textColor="@color/txt_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend"
            android:text="Xem thêm"
            android:textColor="@color/red"
            android:textSize="13sp" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/lasted_product_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <ImageView android:background="@drawable/mobile" android:layout_width="match_parent" android:layout_height="150dp" android:layout_margin="10dp"/>
    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp">
        <TextView android:textColor="@color/txt_color" android:layout_width="0dp" android:layout_height="wrap_content" android:text="Các dòng điện thoại thịnh hành" android:layout_weight="1" android:fontFamily="@font/lexend"/>
        <TextView android:textSize="13sp" android:textColor="@color/red" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Xem thêm" android:fontFamily="@font/lexend"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView android:id="@+id/pupular_product_recyclerview" android:paddingLeft="10dp" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="12dp">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/anhgalaxysamdung" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
            <ImageView android:background="@drawable/anhnoteme" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:background="@drawable/anhnoteme" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
            <ImageView android:background="@drawable/anhtonor" android:layout_width="0dp" android:layout_height="120dp" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
